# LMEM model
model4_4 <- lmer(log(daly_pop) ~ 1 + popm + pop65 + income + year + hdi +
                   (1 + year | location),
                 data=Finaldataset_MPH,
                 control = lmerControl(calc.derivs = FALSE))

summary(model4_4)

model4_4_2 <- lmer(log(daly_pop) ~ 1 + popm + pop65 + year + hdi +
                     (1 + year | location),
                   data=Finaldataset_MPH,
                   control = lmerControl(calc.derivs = FALSE))
anova(model4_4_2, model4_4)

